<script src="https://kit.fontawesome.com/b85fe5262a.js" crossorigin="anonymous"></script>

<div class="container" style="margin-top: 50px auto">


    <div class="row">
            <p class="text-end">Hola {{usuario}}! <a  class="btn btn-danger" href="/admin/pacienteslogin/logout">
             Cerrar sesión <i class="fas fa-sign-out-alt"></i></a></p>
            </div>



            <div class="row">
                <div class="col-7">
                    <h2>Ejercicios para realizar en casa</h2>
                </div>
            <div class="col-5 text-end">
                <a href="" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i>Mi lista</a>
                    </div>
                </div>



            <div class="row">
                <div class="col">
                    <table class="table" style="table-layout:fixed">
                            <thead>
                                <tr class="table-dark">
                                    <th scope="col">#</th>
                                    <th scope="col">Ejercicios</th>
                                    <th scope="col">Descripción</th>
                                    <th scope="col">Repeticiones</th>
                                    <th class="text-end">Selección</th>
                                </tr>
                            </thead>
                            <tbody>
                            {{#each athome}}
                                <tr>
                                    <th scope="row">{{id}}</th>
                                    <td>{{ejercicio}}</td>
                                    <td>{{{descripcion}}}</td>
                                    <td>{{{repeticion}}}</td>
                                    <td class="text-end">
                                        <a class="btn btn-secondary" href=""><i class="far fa-check-square"></i></i></a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>